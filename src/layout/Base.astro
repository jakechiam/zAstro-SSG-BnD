const {title} = Astro.props		// Used destructuring here to define title var
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{title}</title>

	<style>
		p {max-width: 35em;}
	</style>

</head>

<body>
	<header class="site-header">
		<nav>
			<ul>
				<li>
					<a href="/">Home</a>
					<a href="/about">About</a>
					<a href="/contact">Contact</a>
					<a href="/basic">Basic</a>
				</li>
			</ul>
		</nav>
	</header>

	<!-- This will show up if <Base /> does not contain any data -->
	<slot>This is a default slot message</slot>

</body>
</html>